{
  "compilerOptions": {
    "module": "CommonJS", // Use "CommonJS" if targeting Node
    "declaration": true, // Emit .d.ts files
    "declarationMap": true, // Optional: sourcemaps for .d.ts
    "sourceMap": true, // Generate .js.map files
    "outDir": "dist", // Output directory
    "rootDir": "src", // Source files location
    "moduleResolution": "node", // Resolve node_modules
    "esModuleInterop": true, // Allow default imports from CommonJS
    "forceConsistentCasingInFileNames": true,
    "strict": true, // Enable all strict type-checking options
    "skipLibCheck": true // Skip type checking of .d.ts files
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
